<div class="container" style="margin-top: 25px;">
    <h4>Lists</h4>
</div><br>
<div class="container">
    <% if @lists.empty? %>
        No lists yet!
    <% else %>
        <% @recipients.each do |recipient| %>
            <h6><a href="/recipients/<%= recipient.id %>"><%= recipient.name %></a></h6>
                <ul><% recipient.lists.each do |list| %>
                    <li><a href='/lists/<%= list.id %>'><%= list.name %></a></li>
                <% end %></ul><br>
            <% end %>
    <% end %>
</div><br>
<div class="container">
    <form action="/lists/new" style="display:inline-block">
    <input class="btn btn-secondary" type="submit" value="New List" style="margin-top: 5px;"/>
    </form>
</div>