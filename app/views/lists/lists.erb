<div class="container" style="margin-top: 25px;">
    <h4>Lists</h4>
</div><br>
<div class="container">
    <% @recipients.each do |recipient| %>
        <h6><%= recipient.name %></h6>
            <% if recipient.lists.empty? %>
                No lists yet!
            <% else %>
                <ul><% recipient.lists.each do |list| %>
                    <li><a href='/lists/<%= list.id %>'><%= list.name %></a></li>
                <% end %></ul><br>
            <% end %>
    <% end %>
</div><br>
<div class="container">
    <form action="/lists/new" style="display:inline-block">
    <input class="btn btn-primary" type="submit" value="Create New List" style="margin-top: 5px;"/>
    </form>
</div>