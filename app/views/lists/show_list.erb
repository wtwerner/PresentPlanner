<div class="container" style="margin-top: 25px;">
    <h4><%= @list.name %></h4>
</div>
<div class="container">
    For <a href="/recipients/<%= @list.recipient.id %>"><%= @list.recipient.name %></a><br>
    <%= @list.event_date.strftime("%B %d, %Y") %>
</div><br>
<div class="container">
    <% if @list.gifts.empty? %>
        No gifts yet!
    <% else %>
        <h5>Gift ideas</h5>
        <% @list.gifts.each do |gift| %>
           <a href='/gifts/<%= gift.id %>'><%= gift.name %></a><br>
        <% end %>
    <% end %><br><br>
    <form type="hidden" id="delete_list" onsubmit="return confirm('Are you sure you want to delete <%= @list.name %>? This can not be undone.')" method="post" action="/lists/<%=@list.id%>/delete">
    <input type="hidden" id="hidden" name="_method" value="delete">
    </form>
    <div class="btn-group" role="group">
        <a class="btn btn-secondary" href="/gifts/new" role="button">New Gift</a>
        <a class="btn btn-secondary" href="/lists/<%=@list.id%>/edit" role="button">Edit List</a>
        <button form="delete_list" class="btn btn-secondary" id="submit" type="submit" value="Delete List" role="button">Delete List</button>
        <a class="btn btn-secondary" href="/recipients/<%= @list.recipient.id %>" role="button">Return to Recipient</a>
    </div>
</div>
