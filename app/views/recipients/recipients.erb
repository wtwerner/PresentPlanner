<div class="container" style="margin-top: 25px;">
    <h4>Recipients</h4>
</div>
<div class="container">
    <% if @recipients.empty? %>
        <a href="/recipients/new">Create a new recipient</a>
    <% else %>
        <% @recipients.each do |recipient| %>
            <a href="/recipients/<%= recipient.id %>"><%= recipient.name %></a><br>    
        <% end %><br>
    <form action="/recipients/new" style="display:inline-block">
        <input action="/login" class="btn btn-secondary" type="submit" value="Create New Recipient"/>
    </form>   
    <% end %> 
</div>