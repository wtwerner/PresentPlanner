<h3>Edit Recipient</h3>

<form action='/recipients/<%=@recipient.id%>%' method="patch">
<input type="hidden" id="hidden" name="_method" value="patch">
<div>
    <label for="name">Name:</label>
    <input id='name' type='text' name='name' value="<%=@recipient.name%>">
</div>

<div>
    <label for="relationship">Relationship:</label>
    <input id='relationship' type='text' name='relationship' value="<%=@recipient.relationship%>">
</div>

<div>
    <label for="birth_month">Birth Month (currently <%= Date::ABBR_MONTHNAMES[@recipient.birth_month] %>):</label>
    <select name='birth_month' id='birth_month' value="<%=@recipient.birth_month%>">
        <% 12.times do |i| %>
            <option value="<%= i+1 %>"><%= Date::MONTHNAMES[i+1] %></option>
        <% end %>
    </select>
</div>

<div>
    <label for="birth_day">Birth Day (currently <%= @recipient.birth_day %>):</label>
    <select name='birth_day' id='birth_day' value="<%=@recipient.birth_day%>">
        <% 31.times do |i| %>
            <option value="<%= i+1 %>"><%= i+1 %></option>
        <% end %>
    </select>
</div>
<br>
<div><input class="btn btn-primary" type="submit" value="Submit Changes"></div>
</form>