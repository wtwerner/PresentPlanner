<div class="container" style="margin-top: 25px;">
    <h4>Create a new recipient</h4>
</div><br>
<div class="container">
    <form action='/recipients' method="post">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" name="name" id="name" placeholder="Enter name">
        </div>
        <div class="form-group">
            <label for="relationship">Relationship</label>
            <input type="text" class="form-control" name="relationship" id="relationship" placeholder="Enter relationship to you">
        </div>
        <div class="form-group">
            <label for="birth_month">Birth Month</label>
            <select class="form-control" name='birth_month' id='birth_month'>
                <% 12.times do |i| %>
                    <option value="<%= i+1 %>"><%= Date::MONTHNAMES[i+1] %></option>
                <% end %>
            </select>
        </div>
        <div class="form-group">
            <label for="birth_day">Birth Day</label>
            <select class="form-control" name='birth_day' id='birth_day'>
                <% 31.times do |i| %>
                    <option value="<%= i+1 %>"><%= i+1 %></option>
                <% end %>
            </select>
        </div>
        <div><input class="btn btn-secondary" type="submit" value="Create Recipient"></div>
    </form>
</div>