<div class="container" style="margin-top: 25px;">
    <h4><%= @recipient.name %></h4>
</div>
<div class="container">
<% if @recipient.relationship != nil && @recipient.relationship != "" %>
    Relationship: <%= @recipient.relationship %><br>
<% end %>
Birthday: <%= Date::MONTHNAMES[@recipient.birth_month] %> <%= @recipient.birth_day %><br><br>
</div>
<div class="container">
    <h5>Lists:</h5>
    <div>
        <% if @recipient.lists.empty? %>
            No lists yet!
        <% else %>
            <% @recipient.lists.each do |list| %>
                <a href='/lists/<%= list.id %>'><%= list.name %></a><br>
            <% end %><br>
        <% end %>
    </div><br>
    <div clas="container">
        <form type="hidden" id="delete_recipient" onsubmit="return confirm('Are you sure you want to delete <%= @recipient.name %>? This can not be undone.')" method="post" action="/recipients/<%=@recipient.id%>/delete">
        <input type="hidden" id="hidden" name="_method" value="delete">
        </form>
        <div class="btn-group" role="group">
            <a class="btn btn-secondary" href="/lists/new" role="button">New List</a>
            <a class="btn btn-secondary" href="/recipients/<%=@recipient.id%>/edit" role="button">Edit Recipient</a>
            <button form="delete_recipient" class="btn btn-secondary" id="submit" type="submit" value="Delete Recipient" role="button">Delete Recipient</button>
        </div>
    </div>
</div>