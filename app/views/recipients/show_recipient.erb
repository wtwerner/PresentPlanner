<div class="container" style="margin-top: 25px;">
    <h4><%= @recipient.name %></h4>
</div>
<div class="container">
Relationship: <%= @recipient.relationship %><br>
Birthday: <%= Date::MONTHNAMES[@recipient.birth_month] %> <%= @recipient.birth_day %><br><br>
</div>
<div class="container">
    <h4>Lists:</h4>
    <div>
        <% if @recipient.lists.empty? %>
            No lists yet!
        <% else %>
            <ul><% @recipient.lists.each do |list| %>
                <li><a href='/lists/<%= list.id %>'><%= list.name %></a></li>
            <% end %></ul><br>
        <% end %>
    </div><br>

    <div>
        <form action="/lists/new">
            <input class="btn btn-primary" type="submit" value="New List" style="margin-top: 5px;"/>
        </form>
    </div>
    <div>
        <form action="/recipients/<%=@recipient.id%>/edit">
            <input class="btn btn-primary" type="submit" value="Edit Recipient" style="margin-top: 5px;"/>
        </form>
    </div>
    <div>
        <form onsubmit="return confirm('Are you sure you want to delete <%= @recipient.name %>? This can not be undone.')" method="post" action="/recipients/<%=@recipient.id%>/delete">
            <input type="hidden" id="hidden" name="_method" value="delete">
            <input class="btn btn-primary" id="submit" type="submit" value="Delete Recipient" style="margin-top: 5px;">
        </form>
    </div>
</div>