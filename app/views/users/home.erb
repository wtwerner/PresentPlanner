<div class="container"style="margin-top: 25px;"> 
    <% if @user.name == nil %>
        <h2>Welcome!</h2>
    <% else %>
        <h2>Welcome, <%= @user.name %>!</h2>
    <% end %>
</div><br>
<div class="container">
    <div class="row">
        <div class="col-sm">
            <h4>Recipients</h4>
            <% if @ordered_recipients.empty? %>
                <p>No recipients yet!</p>
            <% else %>
                <% @ordered_recipients.each do |recipient| %>
                    <a href="/recipients/<%= recipient.id %>"><%= recipient.name.capitalize%></a><br>
                <% end %>
            <% end %>
        </div>
        <div class="col-sm">
            <h4>Lists</h4>
            <% if @ordered_lists.empty? %>
                <p>No lists yet!</p>
            <% else %>
                <% @ordered_lists.each do |list| %>
                    <a href="/lists/<%= list.id %>"><%= list.recipient.name.capitalize %> - <%= list.name.capitalize%></a> (<%= list.event_date.strftime("%B %d, %Y") %>)<br>
                <% end %>
            <% end %>
        </div>
    </div><br>
    <div class="row">
        <div class="col-sm">
            <form action="/recipients/new">
                <input role="button" class="btn btn-primary" type="submit" value="New Recipient" style="margin-top: 5px;">
            </form>
        </div>
        <div class="col-sm">
            <form action="/lists/new">
                <input role="button" class="btn btn-primary" type="submit" value="New List" style="margin-top: 5px;">
            </form>
        </div>
    </div>
</div>