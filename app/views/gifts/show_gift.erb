<div class="container" style="margin-top: 25px;">
    <h4><%= @gift.name.capitalize %></h4>
</div><br>
<div class="container">
    List: <%= @gift.list.name %> (<%= @gift.list.recipient.name %>)<br>
    Price: $<%= @gift.price %><br>
    Description: <%= @gift.description %><br>
    Note: <%= @gift.note %><br>
    <a href="<%= @gift.url %>">Visit Website</a>
    <br><br>
    <form type="hidden" id="delete_gift" onsubmit="return confirm('Are you sure you want to delete <%= @gift.name %>? This can not be undone.')" method="post" action="/gifts/<%=@gift.id%>/delete">
    <input type="hidden" id="hidden" name="_method" value="delete">
    </form>
    <div class="btn-group" role="group">
        <a class="btn btn-secondary" href="/gifts/<%=@gift.id%>/edit" role="button">Edit Gift</a>
        <button form="delete_gift" class="btn btn-secondary" id="submit" type="submit" value="Delete Gift" role="button">Delete Gift</button>
        <a class="btn btn-secondary" href="/lists/<%= @gift.list.id %>" role="button">Return to List</a>
    </div>
</div>
