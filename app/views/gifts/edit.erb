<div class="container" style="margin-top: 25px;">
    <h4>Edit Gift</h4>
</div><br>
<div class="container">
    <form action='/gifts/<%=@gift.id %>' method="post">
    <input type='hidden' id='hidden' name='_method' value='patch'>
        <div class="form-group">
            <label for="name">Name:</label>
            <input class="form-control" id='name' type='text' name='name' value="<%= @gift.name %>">
        </div>
        <div class="form-group">
            <label for="price">Price:</label>
            <input class="form-control" id='price' type='text' name='price' value="<%= @gift.price %>">
        </div>
        <div class="form-group">
            <label for="url">URL:</label>
            <input class="form-control" id='url' type='url' name='url' value="<%= @gift.url %>">
        </div>
        <div class="form-group">
            Description:
            <textarea class="form-control" id='description' name='description'rows="2"><%= @gift.description %></textarea>
        </div>
        <div class="form-group">
            Note:
            <textarea class="form-control" id='note' name='note'rows="2"><%= @gift.note %></textarea>
        </div>
        <div class="form-group">
            <label for='recipient'>Recipient:</label>
            <select class="form-control" name='recipient' id='recipient'>
                <% @recipients.each do |recipient| %>
                    <option value='<%= recipient.name %>' <%= 'selected' if @gift.list.recipient == recipient %>><%= recipient.name %></option>
                <% end %>
            </select>
        </div>
        <div><input class="btn btn-secondary" type="submit" value="Submit Changes"></div>
    </form>
</div>